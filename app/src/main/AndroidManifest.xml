<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kh.delivery_project">

    <!-- 네트워크 사용에 대한 퍼미션 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <service android:name="com.amazonaws.mobileconnectors.s3.transferutility.TransferService" android:enabled="true" />

        <activity android:name=".activities.Activity_Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.Activity_Deliver_Regist"
            android:parentActivityName=".activities.Activity_Home"
            android:theme="@style/ActionBar"/>
        <activity android:name=".activities.Activity_FindAccount"
            android:parentActivityName=".activities.Activity_Home"
            android:theme="@style/ActionBar"/>
        <activity android:name=".activities.Activity_Deliver_Main"/>
        <activity android:name=".activities.Activity_Deliver_MyPage" />
        <activity android:name=".activities.Activity_Delivery"
            android:parentActivityName=".activities.Activity_Deliver_Main"
            android:theme="@style/CustomDialog"/>
        <activity android:name=".activities.Activity_Timeline"
            android:parentActivityName=".activities.Activity_Deliver_Main"
            android:theme="@style/CustomDialog"/>
        <activity android:name=".activities.Activity_WebView"/>
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="c0a88980c9b9b281aefad70b0181e614" />
    </application>

</manifest>