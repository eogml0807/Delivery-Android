<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">
    <!--    타임라인 페이지-->

    <Button
        android:id="@+id/btnToggleWriteForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="글 작성" />

    <!--    글 종류 별 검색-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <Spinner
            android:id="@+id/boardSpinner"
            android:layout_width="100dp"
            android:layout_height="40dp" />

    </LinearLayout>


    <!--    타임라인 작성-->
    <LinearLayout
        android:id="@+id/boardWriteForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtBoard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="게시글 입력" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivWriteImg"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <Button
                    android:id="@+id/btnSelectImg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="사진 첨부" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnInsertArticle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="작성 완료" />

    </LinearLayout>
    <!--    타임라인 작성 끝-->

    <!--    타임라인 리스트-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ProgressBar
            android:id="@+id/boardProgressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="gone" />

        <ListView
            android:id="@+id/boardListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/boardProgressbar" />

    </RelativeLayout>
    <!--    타임라인 리스트 끝-->
</LinearLayout>