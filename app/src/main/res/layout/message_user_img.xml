<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
<!--    사용자 메시지 이미지폼-->

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civSenderImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/default_img" />

    <TextView
        android:id="@+id/txtSenderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/civSenderImg"
        android:text="name"
        android:textColor="#333333" />

    <ImageView
        android:id="@+id/ivMsgImg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/txtSenderName"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/civSenderImg"
        android:padding="12dp" />

    <TextView
        android:id="@+id/txtMsgDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ivMsgImg"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/ivMsgImg"
        android:text="13:35"
        android:textSize="12sp" />
</RelativeLayout>