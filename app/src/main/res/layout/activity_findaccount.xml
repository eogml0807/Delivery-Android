<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dp">
    <!--    계정 조회 페이지-->

    <EditText
        android:id="@+id/edtFindAccId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#FFDED7"
        android:hint="  아이디"
        android:inputType="text"
        android:visibility="gone" />

    <EditText
        android:id="@+id/edtFindAccName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#FFDED7"
        android:hint="  이름"
        android:inputType="text"
        android:privateImeOptions="defaultInputmode=korean" />

    <EditText
        android:id="@+id/edtFindAccEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#FFDED7"
        android:hint="  이메일"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/edtFindAccPhone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#FFDED7"
        android:hint="  전화번호"
        android:inputType="phone" />

    <TextView
        android:id="@+id/txtFindAccResult"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <Button
        android:id="@+id/btnFindId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c0f4f5"
        android:text="아이디 찾기"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnFindPw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c0f4f5"
        android:text="비밀번호 찾기"
        android:textSize="20dp"
        android:visibility="gone" />

</LinearLayout>