<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="작성자" />

        <TextView
            android:id="@+id/txtWriterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="작성자명" />

        <TextView
            android:id="@+id/txtTimeContent"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/txtWriterName"
            android:text="컨텐츠" />

        <EditText
            android:id="@+id/edtTimeContent"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:hint="수정사항 작성"
            android:visibility="invisible" />

        <RatingBar
            android:id="@+id/rbTimeStar"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ivDialogTimeImg"
            android:layout_centerHorizontal="true"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/ivDialogTimeImg"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_above="@+id/btnModTimeImg"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btnModTimeImg"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="사진 선택" />

    </RelativeLayout>
</LinearLayout>