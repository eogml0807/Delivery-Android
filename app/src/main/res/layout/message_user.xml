<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civSenderImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/default_img"/>
    <TextView
        android:id="@+id/txtSenderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textColor="#333333"
        android:layout_toRightOf="@+id/civSenderImg"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/txtSenderMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello android"
        android:layout_below="@+id/txtSenderName"
        android:layout_toRightOf="@id/civSenderImg"
        android:layout_marginLeft="16dp"
        android:padding="12dp"
        android:maxWidth="250dp"
        android:background="@drawable/message_deliver_back"
        android:textColor="#ffffff"/>
    <TextView
        android:id="@+id/txtMsgDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13:35"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/txtSenderMsg"
        android:layout_marginLeft="8dp"
        android:layout_alignBottom="@id/txtSenderMsg"/>
</RelativeLayout>